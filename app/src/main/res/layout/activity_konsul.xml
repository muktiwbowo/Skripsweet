<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muktiwbowo.skripsweet.konsul.KonsulActivity">
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refreshKonsul"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama pasien"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/edt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usia"
                    android:inputType="number"
                    android:padding="10dp" />

                <RadioGroup
                    android:id="@+id/rb_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_boy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pria"
                        android:textAllCaps="true" />

                    <RadioButton
                        android:id="@+id/radio_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wanita"
                        android:textAllCaps="true" />
                </RadioGroup>

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Berat badan"
                    android:inputType="number"
                    android:padding="10dp" />

                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/spinerGejala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/spinerPenyakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/spinerObat"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_style"
                    android:text="Cek"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
